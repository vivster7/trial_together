<%= form_for(@post) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "Compose new post..." %>
    <%= hidden_field_tag 'trial_id', @trial.id %> 
  </div>
  <%= f.submit "Post", class: "btn btn-large btn-primary pull-right" %>
<% end %>